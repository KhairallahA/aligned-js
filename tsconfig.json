{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "lib": ["es6", "dom"],
    "outDir": "./lib"
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["./src"]
}
